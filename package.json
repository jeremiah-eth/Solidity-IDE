{
  "name": "solidity-ide",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Professional Solidity IDE for smart contract development with Monaco editor, gas estimation, and multi-chain support",
  "keywords": ["solidity", "smart-contracts", "ethereum", "blockchain", "IDE", "web3", "development"],
  "author": {
    "name": "Solidity IDE Team",
    "email": "team@solidity-ide.com",
    "url": "https://solidity-ide.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/solidity-ide/solidity-ide.git"
  },
  "homepage": "https://solidity-ide.com",
  "bugs": {
    "url": "https://github.com/solidity-ide/solidity-ide/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:css:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@pinata/sdk": "^2.1.0",
    "@reown/appkit": "^1.8.14",
    "@reown/appkit-adapter-ethers": "^1.8.14",
    "axios": "^1.12.2",
    "buffer": "^6.0.3",
    "ethers": "^6",
    "lucide-react": "^0.545.0",
    "process": "^0.11.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "solc": "^0.8.30"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
